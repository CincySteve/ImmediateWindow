@page "/counter"
@inject MyData MyData
@using System.Data;

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
        {
        currentCount++;
        MyData.MyInt = currentCount;

        DataTable LocalDT = new DataTable();
        DataColumn localdc = new DataColumn("Col1", typeof(decimal));
        LocalDT.Columns.Add(localdc);

        MyData.MyDataTable = new System.Data.DataTable();
        DataColumn dc = new DataColumn("Col1", typeof(decimal));
        MyData.MyDataTable.Columns.Add(dc);
        }
}
